<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="320.0" prefWidth="500.0" stylesheets="@../css/bootstrap.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lojadoprazerfx.controller.ModelCreateFuncController">
   <children>
      <ButtonBar layoutX="300.0" layoutY="280.0" prefHeight="40.0" prefWidth="200.0" AnchorPane.rightAnchor="5.0">
        <buttons>
            <Button fx:id="buttonCancel" mnemonicParsing="false" onAction="#handleCancel" stylesheets="@../css/bootstrap.css" text="Cancelar" />
          <Button fx:id="buttonSave" mnemonicParsing="false" onAction="#handleSave" stylesheets="@../css/bootstrap.css" text="Salvar" />
        </buttons>
      </ButtonBar>
      <VBox AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <HBox alignment="CENTER_RIGHT" nodeOrientation="LEFT_TO_RIGHT">
               <children>
                  <Label text="Nome:">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="textFieldNome" prefWidth="400.0" stylesheets="@../css/bootstrap.css" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Label text="CPF:">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="textFieldCpf" prefWidth="400.0" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Label text="Login:">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="textFieldLogin" prefWidth="400.0" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Label text="Senha:">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="textFieldSenha" prefWidth="400.0" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Label text="Salário:">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="textFieldSalario" prefWidth="400.0">
                     <HBox.margin>
                        <Insets bottom="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Label text="Matrícula:">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="textFieldMatricula" editable="false" prefWidth="400.0" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Label text="Tipo:">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <Group>
                     <children>
                        <RadioButton fx:id="rbFuncionario" mnemonicParsing="false" stylesheets="@../css/bootstrap.css" text="Funcionário" />
                        <RadioButton fx:id="rbGerente" layoutY="25.0" mnemonicParsing="false" text="Gerente" />
                        <RadioButton fx:id="rbDiretor" layoutY="50.0" mnemonicParsing="false" text="Diretor" />
                     </children>
                  </Group>
               </children>
               <VBox.margin>
                  <Insets left="30.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
